    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:columnCount="5"

        android:orientation="vertical"
        android:rowCount="5">

        <TextView
            android:id="@+id/ListingTitle"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_row="0"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:text="ListingTitle"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:clickable="false"/>


        <TextView
            android:id="@+id/ProviderName"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_row="1"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:text="ProviderName"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:clickable="false"/>


        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:layout_row="1"
            android:numStars="5" />


        <TextView
            android:id="@+id/ListingDescription"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_margin="5dp"
            android:layout_row="3"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed"
            android:text="Listing Discription Listing Discription Listing Discription  Listing Discription Listing Discription Listing Discription Listing Discription Listing Discription  sting Discription Listing Discription Listing Discription Listing Discription Listing Discription Listing Discription Listing Discription Listing Discription"
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            android:textStyle="italic"
            android:typeface="monospace"
            android:clickable="false"/>


        <Button
            android:id="@+id/button3"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_column="2"
            android:layout_margin="2dp"
            android:layout_row="4"
            android:text="Respond"
            android:textSize="12sp"
            android:textStyle="bold"
            android:clickable = "false"/>

        <TextView
            android:id="@+id/ListingPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:text="ListingPrice"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:clickable = "false"/>

        <TextView
            android:id="@+id/ListingZip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:fontFamily="Serif"
            android:text="ListingZip"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:clickable = "false"/>


    </GridLayout>

